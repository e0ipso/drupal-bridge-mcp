# Drupal JSON-RPC Configuration
DRUPAL_BASE_URL=http://localhost/drupal
DRUPAL_JSON_RPC_ENDPOINT=/jsonrpc
DRUPAL_JSON_RPC_DISCOVERY_ENDPOINT=/jsonrpc/methods

# Environment Settings
NODE_ENV=development
PORT=3000

# MCP Server Configuration
MCP_SERVER_NAME=drupal-bridge-mcp
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info              # error | warn | info | debug
LOG_TO_FILE=false          # Force file logging (overrides environment defaults)
LOG_DIR=./logs             # Directory for log files (production mode)
DISABLE_PRETTY_LOGS=false  # Disable pretty-printing in development
DEBUG=mcp:*                # Enable debug output for specific components

# OAuth 2.0 Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
AUTH_ENABLED=true
# AUTH_SKIP=false  # Set to true to bypass authentication for testing