# Environment Settings
NODE_ENV=development
PORT=3000

# MCP Server Configuration
MCP_SERVER_NAME=drupal-bridge-mcp
MCP_SERVER_VERSION=1.0.0

# Drupal MCP Configuration
DRUPAL_BASE_URL=https://your-drupal-site.com
# A2A standard endpoint for tool invocation (defaults to /mcp/tools/invoke)
DRUPAL_JSONRPC_ENDPOINT=/mcp/tools/invoke

# HTTP Transport Configuration
HTTP_PORT=6200
# HTTP server host binding
HTTP_HOST=localhost
# Comma-separated CORS origins
HTTP_CORS_ORIGINS=http://localhost:6200,http://localhost:6201,http://localhost:6274
# HTTP request timeout in milliseconds
HTTP_TIMEOUT=30000

# Logging Configuration
# error | warn | info | debug
LOG_LEVEL=info
# Force file logging (overrides environment defaults)
LOG_TO_FILE=false
# Directory for log files (production mode)
LOG_DIR=./logs
# Disable pretty-printing in development
DISABLE_PRETTY_LOGS=false
# Enable debug output for specific components
DEBUG=mcp:*

# OAuth 2.1 Configuration
# Enable or disable OAuth authentication
AUTH_ENABLED=true

# OAuth client credentials (from Drupal Simple OAuth setup)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Space or comma-separated list of OAuth scopes
OAUTH_SCOPES="profile tutorial_read user_read tutorial_search"

# Optional: Override the resource server URL (defaults to DRUPAL_URL)
# OAUTH_RESOURCE_SERVER_URL=https://your-drupal-site.com

# OAuth discovery endpoint: {DRUPAL_URL}/.well-known/oauth-authorization-server
# Token introspection: {DRUPAL_URL}/oauth/introspect (or from metadata)
# Authorization: {DRUPAL_URL}/oauth/authorize (from metadata)
# Token: {DRUPAL_URL}/oauth/token (from metadata)

# Uncomment if you are working against a local Drupal environment with a self-signed certificate.
NODE_TLS_REJECT_UNAUTHORIZED=0
