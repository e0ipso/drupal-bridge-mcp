{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info",
        "MCP_TRANSPORT": "sse",
        "HEALTH_CHECK_ENABLED": "true",
        "HEALTH_CHECK_PATH": "/health",
        "REQUEST_TIMEOUT": "30000",
        "HTTPS_ONLY": "true",
        "RATE_LIMIT_ENABLED": "true",
        "RATE_LIMIT_MAX": "1000",
        "RATE_LIMIT_WINDOW": "900000",
        "SECURITY_HEADERS_ENABLED": "true",
        "CSP_ENABLED": "true",
        "CORS_ENABLED": "true",
        "CORS_ORIGINS": "https://drupalize.me,https://claude.ai",
        "DRUPAL_BASE_URL": "https://drupalize.me",
        "DRUPAL_JSONRPC_ENDPOINT": "/jsonrpc",
        "OAUTH_AUTHORIZATION_URL": "https://drupalize.me/oauth/authorize",
        "OAUTH_TOKEN_URL": "https://drupalize.me/oauth/token",
        "OAUTH_SCOPES": "content:read user:read",
        "OAUTH_TOKEN_REFRESH_BUFFER": "300",
        "DATABASE_POOL_MIN": "2",
        "DATABASE_POOL_MAX": "20",
        "DATABASE_CONNECTION_TIMEOUT": "10000",
        "DATABASE_IDLE_TIMEOUT": "30000",
        "DATABASE_SSL": "true",
        "DATABASE_SSL_MODE": "require"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "LOG_LEVEL": "debug",
        "MCP_TRANSPORT": "sse",
        "HEALTH_CHECK_ENABLED": "true",
        "HEALTH_CHECK_PATH": "/health",
        "REQUEST_TIMEOUT": "30000",
        "HTTPS_ONLY": "true",
        "RATE_LIMIT_ENABLED": "true",
        "RATE_LIMIT_MAX": "500",
        "RATE_LIMIT_WINDOW": "900000",
        "SECURITY_HEADERS_ENABLED": "true",
        "CSP_ENABLED": "true",
        "CORS_ENABLED": "true",
        "CORS_ORIGINS": "https://staging.drupalize.me,https://claude.ai",
        "DRUPAL_BASE_URL": "https://staging.drupalize.me",
        "DRUPAL_JSONRPC_ENDPOINT": "/jsonrpc",
        "OAUTH_AUTHORIZATION_URL": "https://staging.drupalize.me/oauth/authorize",
        "OAUTH_TOKEN_URL": "https://staging.drupalize.me/oauth/token",
        "OAUTH_SCOPES": "content:read user:read",
        "OAUTH_TOKEN_REFRESH_BUFFER": "300",
        "DATABASE_POOL_MIN": "1",
        "DATABASE_POOL_MAX": "10",
        "DATABASE_CONNECTION_TIMEOUT": "10000",
        "DATABASE_IDLE_TIMEOUT": "30000",
        "DATABASE_SSL": "true",
        "DATABASE_SSL_MODE": "require"
      }
    }
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 10,
    "interval": 30
  }
}
