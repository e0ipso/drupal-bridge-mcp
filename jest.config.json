{
  "testEnvironment": "node",
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "module": "ES2022",
          "target": "ES2022",
          "moduleResolution": "node"
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^@/(.*)\\.(js|ts)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1",
    "^(.*)\\.js$": "$1"
  },
  "testMatch": [
    "**/__tests__/**/*.test.ts",
    "**/__tests__/**/*.spec.ts",
    "**/tests/**/*.test.ts",
    "**/tests/**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/", "/coverage/"],
  "transformIgnorePatterns": ["node_modules/(?!(@modelcontextprotocol/sdk)/)"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "collectCoverage": false,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts", "!src/**/*.test.ts", "!src/**/*.spec.ts", "!src/index.ts"],
  "coverageReporters": ["text", "text-summary", "html", "lcov", "json"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "maxWorkers": "50%",
  "cache": true,
  "cacheDirectory": "<rootDir>/.jest-cache",
  "verbose": true,
  "silent": false,
  "bail": false,
  "testTimeout": 10000,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "errorOnDeprecated": true,
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
}
