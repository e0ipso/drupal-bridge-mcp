{
  "testEnvironment": "node",
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true,
      "tsconfig": {
        "module": "ES2022",
        "target": "ES2022"
      }
    }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@/types/(.*)$": "<rootDir>/src/types/$1",
    "^@/utils/(.*)$": "<rootDir>/src/utils/$1",
    "^@/services/(.*)$": "<rootDir>/src/services/$1",
    "^@/mcp/(.*)$": "<rootDir>/src/mcp/$1",
    "^@/auth/(.*)$": "<rootDir>/src/auth/$1",
    "^@/drupal/(.*)$": "<rootDir>/src/drupal/$1",
    "^@/database/(.*)$": "<rootDir>/src/database/$1",
    "^@/config/(.*)$": "<rootDir>/src/config/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.test.ts",
    "**/__tests__/**/*.spec.ts",
    "**/tests/**/*.test.ts",
    "**/tests/**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "collectCoverage": false,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/index.ts"
  ],
  "coverageReporters": [
    "text",
    "text-summary",
    "html",
    "lcov",
    "json"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "maxWorkers": "50%",
  "cache": true,
  "cacheDirectory": "<rootDir>/.jest-cache",
  "verbose": true,
  "silent": false,
  "bail": false,
  "testTimeout": 10000,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "errorOnDeprecated": true,
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
}