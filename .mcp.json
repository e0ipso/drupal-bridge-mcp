{
  "mcpServers": {
    "drupal-bridge": {
      "command": "npm",
      "args": ["run", "dev"],
      "cwd": "${PWD}",
      "env": {
        "DRUPAL_BASE_URL": "${DRUPAL_BASE_URL:-https://drupal-contrib.ddev.site}",
        "DRUPAL_JSON_RPC_ENDPOINT": "${DRUPAL_JSON_RPC_ENDPOINT:-/jsonrpc}",
        "DRUPAL_JSON_RPC_DISCOVERY_ENDPOINT": "${DRUPAL_JSON_RPC_DISCOVERY_ENDPOINT:-/jsonrpc/methods}",
        "OAUTH_CLIENT_ID": "${OAUTH_CLIENT_ID:-dme_mcp_client}",
        "OAUTH_CLIENT_SECRET": "${OAUTH_CLIENT_SECRET}",
        "OAUTH_SCOPES": "${OAUTH_SCOPES:-tutoral_read user_read tutorial_search}",
        "AUTH_ENABLED": "${AUTH_ENABLED:-true}",
        "NODE_ENV": "${NODE_ENV:-development}",
        "LOG_LEVEL": "${LOG_LEVEL:-info}",
        "DEBUG": "${DEBUG:-mcp:*}",
        "PORT": "${PORT:-3000}",
        "MCP_SERVER_NAME": "${MCP_SERVER_NAME:-dme-mcp}",
        "MCP_SERVER_VERSION": "${MCP_SERVER_VERSION:-1.0.0}"
      }
    }
  }
}
