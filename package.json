{
  "name": "@drupalize/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Drupalize.me Drupal integration with OAuth authentication and content RAG optimization",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:prod": "tsc --build --clean && tsc && tsc-alias",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "node --enable-source-maps dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prestart": "npm run build",
    "prestart:dev": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "drupal",
    "oauth",
    "rag",
    "content-api",
    "json-rpc"
  ],
  "author": "Drupalize.me",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  }
}
