{
  "name": "@e0ipso/drupal-bridge-mcp",
  "version": "2.1.0",
  "description": "Minimal Drupal MCP Server - 336 lines vs 6000 lines (94% reduction!)",
  "main": "dist/index.js",
  "bin": {
    "drupal-bridge-mcp": "dist/server.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "DEBUG=mcp:* tsx --env-file=.env src/server.ts",
    "start": "node --env-file=.env dist/server.js",
    "start:debug": "DEBUG=mcp:* node --env-file=.env dist/server.js",
    "type-check": "tsc --noEmit",
    "test": "npm run build && jest",
    "test:integration": "npm run build && jest --config jest.config.integration.json",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "drupal",
    "oauth",
    "minimal",
    "json-rpc"
  ],
  "author": "Mateu Aguil√≥ Bosch (e0ipso) <mateu@mateuaguilo.com>",
  "license": "proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/e0ipso/drupal-bridge-mcp.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@modelcontextprotocol/inspector": "^0.17.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "fs-extra": "^11.3.2",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/debug": "^4.1.12",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "debug": "^4.4.3",
    "express": "^5.1.0",
    "jose": "^6.1.0",
    "json-rpc-2.0": "^1.7.1",
    "maskdata": "^1.3.3",
    "minimist": "^1.2.8",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.1",
    "zod-from-json-schema": "^0.5.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
