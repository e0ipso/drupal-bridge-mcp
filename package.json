{
  "name": "@e0ipso/drupal-bridge-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Drupal integration with OAuth authentication and content RAG optimization",
  "main": "dist/index.js",
  "bin": {
    "drupal-bridge-mcp": "dist/main.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "tsx src/main.ts",
    "dev:watch": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage:all": "npm run test:unit:coverage && npm run test:integration:coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --bail=1 && jest --config jest.integration.config.js --ci --coverage --maxWorkers=1",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "drupal",
    "oauth",
    "rag",
    "content-api",
    "json-rpc"
  ],
  "author": "Mateu Aguilï¿½ Bosch (e0ipso) <mateu@mateuaguilo.com>",
  "license": "proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/e0ipso/drupal-bridge-mcp.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@types/debug": "^4.1.12",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/nock": "^10.0.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-fetch": "^2.6.13",
    "crypto-js": "^4.2.0",
    "debug": "^4.4.3",
    "json-rpc-2.0": "^1.7.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "open": "^10.2.0",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "tslib": "^2.8.1"
  }
}
