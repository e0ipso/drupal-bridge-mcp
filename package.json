{
  "name": "@e0ipso/drupalizeme-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Drupalize.me Drupal integration with OAuth authentication and content RAG optimization",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:prod": "tsc --build --clean && tsc && tsc-alias",
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "start": "node dist/index.js",
    "start:dev": "node --enable-source-maps dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:e2e": "jest tests/e2e --verbose",
    "test:foundation": "jest tests/foundation-validation.test.ts --verbose",
    "db:setup": "node scripts/run-migrations.js --setup",
    "db:test": "node scripts/run-migrations.js --test",
    "db:validate": "node scripts/validate-schema.js",
    "migrate": "node scripts/run-migrations.js",
    "migrate:setup": "node scripts/run-migrations.js --setup --test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality:check": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "prestart": "npm run build",
    "prestart:dev": "npm run build",
    "prepare": "husky",
    "dev:watch": "nodemon --exec \"npm run build && npm run start:dev\" --watch src --ext ts",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "drupal",
    "oauth",
    "rag",
    "content-api",
    "json-rpc"
  ],
  "author": "Drupalize.me",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/oauth2-server": "^3.0.18",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jayson": "^4.2.0",
    "morgan": "^1.10.1",
    "node-oauth2-server": "^2.4.0",
    "pg": "^8.16.3",
    "simple-oauth2": "^5.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
